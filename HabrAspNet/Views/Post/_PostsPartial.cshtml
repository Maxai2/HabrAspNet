<script>
    let post = document.getElementById("PostId");

    post.remove();

    for (let i = 0; i < @Model.Posts.Count; i++)
    {
        let div = document.createElement("div");

        let h2 = document.createElement("h2");
        h2.innerText = @Model.Posts[i].PostName;
        div.append(h2);

        div.append(document.createElement("br"));

        let labelDate = document.createElement("label");
        labelDate.innerText = @Model.Posts[i].PostDate;
        div.append(labelDate);

        div.append(document.createElement("br"));

        let labelPrev = document.createElement("label");
        labelPrev.innerText = @Model.Posts[i].PostPreview;

        div.append(document.createElement("br"));
        div.append(document.createElement("hr"));

        post.append(div);
    }

</script>
