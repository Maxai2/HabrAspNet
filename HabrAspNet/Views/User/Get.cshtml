@model UserViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <img src="@Model.User.Avatar"/>
    <br />
    <label>@Model.User.Login</label>
    <hr />

    <div>
        @foreach (var p in Model.UserPosts)
        {
            <h2>p.PostName</h2>
            <br />
            <label>p.PostDate</label>
            <br />
            <label>p.PostPreview</label>
            <br />
            <hr />
        }
    </div>
</div>